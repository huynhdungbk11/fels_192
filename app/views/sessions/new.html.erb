<% provide :title, "Log in" %>
<div class="content">
  <div class="omb_login">
    <h3 class="omb_authTitle"><%= t "session_login" %> <a href="#"><%= t "session_signup" %></a></h3>
    <div class="row omb_row-sm-offset-3 omb_socialButtons">
      <div class="col-xs-4 col-sm-2">
        <a href="#" class="btn btn-lg btn-block omb_btn-facebook">
          <i class="fa fa-facebook visible-xs"></i>
          <span class="hidden-xs"><%= t "session_face" %></span>
        </a>
      </div>
      <div class="col-xs-4 col-sm-2">
        <a href="#" class="btn btn-lg btn-block omb_btn-twitter">
          <i class="fa fa-twitter visible-xs"></i>
          <span class="hidden-xs"><%= t "session_tw" %></span>
        </a>
      </div>
      <div class="col-xs-4 col-sm-2">
        <a href="#" class="btn btn-lg btn-block omb_btn-google">
          <i class="fa fa-google-plus visible-xs"></i>
          <span class="hidden-xs"><%= t "session_gg" %></span>
        </a>
      </div>
    </div>
    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr"><%= t "session_or" %></span>
      </div>
    </div>
    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6">
        <%= form_for :session, class: "omb_loginForm", url: login_path do |f| %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.text_field :email, class: "form-control", placeholder: (t "session_pl_email") %>
          </div>
          <span class="help-block"></span>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, class: "form-control", placeholder: (t "session_pl_pass") %>
          </div>
          <div class="col-xs-12 col-sm-3">
            <label class="checkbox">
              <input class="remember" type="checkbox" value="remember-me"><%= t "session_remember" %>
            </label>
          </div>
          <%= f.submit t(:session_login), class: "btn btn-lg btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

