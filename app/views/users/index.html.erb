<% provide :title, t("all_user_title") %>
<div id="wrapper" >
  <% if current_user.is_admin? && !current_user.is_user?(@user) %>
    <%= render "layouts/admin/menu.html.erb" %>
  <% else %>
    <%= render "layouts/menu.html.erb" %>
  <% end %>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <h1><%= t "all_user_index" %></h1>
          <div class="w3-container">
            <%= will_paginate %>
            <ul class="w3-ul w3-card-4">
              <% @users.each do |user| %>
                <li class="w3-padding-16">
                  <img class="w3-left w3-circle w3-margin-right"
                    style="width:60px"><%= gravatar_for user %></img>
                  <span class="w3-xlarge"><%= link_to user.name, user %></span>
                  <br>
                  <span><%= t "name_user_member" %></span>
                  <% if current_user.is_admin? && !current_user.is_user?(user) %>
                    | <%= link_to t(:delete_user), user, method: :delete,
                    data: {confirm: t(:"sure_delete")} %>
                  <% end %>
                </li>
              <% end %>
            </ul>
            <%= will_paginate %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
